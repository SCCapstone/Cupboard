<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lblListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:textColor="@color/darkGray"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_food_to_list_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Quantity: 5 unity\nExpires: Never\nDate Added: Apr 5, 2018\nDescription: None" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/add_food_to_list_button"
        android:layout_width="@dimen/cupboard_button"
        android:layout_height="@dimen/cupboard_button"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        app:backgroundTint="@color/lightGreen"
        app:layout_constraintEnd_toStartOf="@+id/edit_food_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_agenda" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/edit_food_button"
        android:layout_width="@dimen/cupboard_button"
        android:layout_height="@dimen/cupboard_button"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        app:backgroundTint="@color/lightGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</android.support.constraint.ConstraintLayout>